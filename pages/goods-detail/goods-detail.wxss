/* pages/goods-detail/goods-detail.wxss */
/* 轮播图样式 */
swiper{
  width: 100%;height: 720rpx;
}
/* 轮播图内部图片样式 */
swiper image{
  display:block;margin: 60rpx auto;
  width:480rpx;height:480rpx;
}
/* 商品标题样式 */
.title{
  font-size: 34rpx;
}
/* 商品价格样式 */
.price{
  color: #f00;font-size: 32rpx;padding-top: 20rpx;padding-left: 15rpx;
}
/* 商品展示外部样式 */
.box-demo{
  display: flex;flex-direction: column;width: 100%;height: 100rpx;
}
/* 切换内容样式 */
.tab{
  display: inline-block;color: black;
  font-size: 30rpx;width: 50%;
  height: 100rpx;line-height: 100rpx;text-align:center;
}
/* 切换后样式 */
.active{
  color: black;border-bottom: 5rpx solid black;
}
/* 商品详情下方内容样式 */
.fix-box{
  width: 100%;height: auto;display: block;
}
/* 底部样式 */
.bottom{
  width: 100%;height: 90rpx;position: fixed;
  bottom:0rpx;background: #fff;
}
/* 底部左边样式 */
.left{
  width: 25%;margin-left: 20rpx;float: left;
}
/* 底部右边样式 */
.right{
  width: 35%;height: 100%;float: right;
}
/* 底部文字样式 */
.textone{
  display: block;color: white;
  line-height: 100rpx;text-align: center;
  font-size: 26rpx;background: #f00;
}
.texttwo{
  display: block;color: white;
  line-height: 100rpx;text-align: center;
  font-size: 26rpx;background:green;
}
/* 加入购物车图表样式 */
.carts-icon-num{
  position: absolute;top: 5rpx;
  left: 160rpx;width: 40rpx;
  height: 40rpx;line-height: 40rpx;
  border-radius: 50%;background: #f00;
  color: #fff;font-size: 24rpx;text-align: center;
}